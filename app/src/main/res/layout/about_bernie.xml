<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/bernie_sanders"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/bernie_portrait"/>

            <com.ms.square.android.expandabletextview.ExpandableTextView
                xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/about_bernie"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                expandableTextView:maxCollapsedLines="4">

                <TextView
                    android:id="@id/expandable_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/about_bernie_summary"/>

                <ImageButton
                    android:id="@id/expand_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right|bottom"
                    android:background="@android:color/transparent"/>
            </com.ms.square.android.expandabletextview.ExpandableTextView>

        <TextView
            android:text="@string/follow"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:id="@+id/website"
            style="@style/follow_bernie_card">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.joanzapata.iconify.widget.IconTextView
                    android:text="@string/website_icon"
                    android:textColor="@color/globe_blue"
                    style="@style/follow_bernie_icon"/>

                <TextView
                    android:text="@string/official_website"
                    style="@style/follow_bernie_title"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/reddit"
            style="@style/follow_bernie_card">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.joanzapata.iconify.widget.IconTextView
                    android:text="@string/reddit_icon"
                    android:textColor="@color/dark_gray"
                    style="@style/follow_bernie_icon"/>

                <TextView
                    android:text="@string/reddit"
                    style="@style/follow_bernie_title"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/facebook"
            style="@style/follow_bernie_card">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.joanzapata.iconify.widget.IconTextView
                    android:text="@string/facebook_icon"
                    android:textColor="@color/facebook_blue"
                    style="@style/follow_bernie_icon"/>

                <TextView
                    android:text="@string/facebook"
                    style="@style/follow_bernie_title"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/twitter"
            style="@style/follow_bernie_card">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.joanzapata.iconify.widget.IconTextView
                    android:text="@string/twitter_icon"
                    android:textColor="@color/twitter_blue"
                    style="@style/follow_bernie_icon"/>

                <TextView
                    android:text="@string/twitter"
                    style="@style/follow_bernie_title"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/youtube"
            style="@style/follow_bernie_card">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.joanzapata.iconify.widget.IconTextView
                    android:text="@string/youtube_icon"
                    android:textColor="@color/america_red"
                    style="@style/follow_bernie_icon"/>

                <TextView
                    android:text="@string/youtube"
                    style="@style/follow_bernie_title"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/google_plus"
            style="@style/follow_bernie_card">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.joanzapata.iconify.widget.IconTextView
                    android:text="@string/google_plus_icon"
                    android:textColor="@color/america_red"
                    style="@style/follow_bernie_icon"/>

                <TextView
                    android:text="@string/google_plus"
                    style="@style/follow_bernie_title"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>